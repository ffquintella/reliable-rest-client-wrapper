<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Version>0.1.1</Version>
    <PackageId>ReliableRestClientWrapper</PackageId>
    <Title>ReliableRestClientWrapper</Title>
    <Description>Wrapper for RestSharp that provides resilience via the Polly library.</Description>
    <Authors>jsolana;mediatechsolutions</Authors>
    <Copyright>Copyright Mediatech Solutions 2018</Copyright>
    <PackageLicenseUrl>https://www.gnu.org/licenses/lgpl-3.0.en.html</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/mediatechsolutions/reliable-rest-client-wrapper</PackageProjectUrl>
    <PackageTags>RestSharp Rest Client Resilience Retry Retries Polly</PackageTags>
    <IncludeSource>false</IncludeSource>
    <PackageReleaseNotes>
      First release including resilience in RestSharp synchronous operations.
    </PackageReleaseNotes>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Configurations>Debug;Release</Configurations>
    <Platforms>AnyCPU</Platforms>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Polly" Version="8.4.1" />
    <PackageReference Include="RestSharp" Version="112.0.0" />
    <PackageReference Include="RestSharp.Serializers.NewtonsoftJson" Version="112.0.0" />
  </ItemGroup>
</Project>